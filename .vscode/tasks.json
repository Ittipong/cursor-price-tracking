{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "npm",
            "script": "compile",
            "group": "build",
            "presentation": {
                "panel": "dedicated",
                "reveal": "never"
            },
            "options": {
                "statusbar": {
                    "label": "$(tools) Building extension...",
                    "hide": true
                }
            },
            "problemMatcher": ["$tsc"]
        },
        {
            "label": "${workspaceFolder}:tsc:build",
            "type": "shell",
            "command": "npm",
            "args": ["run", "compile"],
            "group": "build",
            "presentation": {
                "panel": "shared",
                "reveal": "silent",
                "clear": false
            },
            "problemMatcher": ["$tsc"]
        }
    ]
}